@model P2_2018UP601.Models.CovidCase

@{
    ViewData["Title"] = "Editar registro";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Province" class="control-label"></label>
                <input asp-for="Province" class="form-control" />
                <span asp-validation-for="Province" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReportedCases" class="control-label"></label>
                <input asp-for="ReportedCases" class="form-control" />
                <span asp-validation-for="ReportedCases" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecoveredCases" class="control-label"></label>
                <input asp-for="RecoveredCases" class="form-control" />
                <span asp-validation-for="RecoveredCases" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActiveCases" class="control-label"></label>
                <input asp-for="ActiveCases" class="form-control" />
                <span asp-validation-for="ActiveCases" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deaths" class="control-label"></label>
                <input asp-for="Deaths" class="form-control" />
                <span asp-validation-for="Deaths" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
@model IEnumerable<P2_2018UP601.Models.CovidCase>

@{
    ViewData["Title"] = "Casos reportados";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo registro</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Departamento</th>
            <th>Provincia</th>
            <th>Género</th>
            <th>Casos reportados</th>
            <th>Casos recuperados</th>
            <th>Casos activos</th>
            <th>Muertes</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Department</td>
                <td>@item.Province</td>
                <td>@item.Gender</td>
                <td>@item.ReportedCases</td>
                <td>@item.RecoveredCases</td>
                <td>@item.ActiveCases</td>
                <td>@item.Deaths</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    <form method="post" asp-action="Delete" asp-route-id="@item.Id" onsubmit="return confirm('¿Estás seguro que deseas eliminar este registro?');">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>